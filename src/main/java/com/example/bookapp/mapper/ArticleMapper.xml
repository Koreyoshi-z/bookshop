<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.example.bookapp.mapper.ArticleMapper">
    <select id="queryAllArticle" resultType="article">
        select * from ec_article
        <where>
            <if test="typeCode!=null">
                type_code like #{typeCode} '%'
            </if>
            <if test="keyword!=null">
                and title like '%' #{keyword} '%'
            </if>
        </where>
    </select>
    
    <select id="getArticleNum" resultType="int">
        select count(id) from ec_article
        <where>
            <if test="typeCode!=null">
                type_code like #{typeCode}
            </if>
            <if test="keyword!=null">
                and title like #{keyword}
            </if>
        </where>
    </select>

</mapper>
